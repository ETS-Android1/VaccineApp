<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <gradient
                android:angle="45"
                android:endColor="@color/colorend_pressed"
                android:startColor="@color/colorstr_pressed"
                android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <gradient
                android:angle="45"
                android:endColor="@color/colorend_pressed"
                android:startColor="@color/colorstr_pressed"
                android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <corners android:radius="5dp" />
            <gradient
                android:angle="45"
                android:endColor="@color/colorend"
                android:startColor="@color/colorstr"
                android:type="linear" />
        </shape>
    </item>
</selector>